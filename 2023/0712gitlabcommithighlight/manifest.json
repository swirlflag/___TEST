{
	"manifest_version": 3,
	"name": "Gitlab Styler",
	"version": "1.0",
	"description": "Gitlab Styler",
	"content_scripts": [
		{
			"js": ["scripts/content.js"],
			"matches": ["https://gitlab.nexon.com/*", "http://127.0.0.1:5500/*"]
		}
	],
	"action": {
		"default_popup": "index.html"
	},
	"permissions": [
    	"storage"
  	]
}
